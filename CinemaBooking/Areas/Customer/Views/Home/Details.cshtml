@model Movie 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name - Movie Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="movie-details-container">
        <!-- Background Image -->
        <div class="movie-banner" style="background-image: url('@Model.ImgUrl');"></div>

        <div class="movie-content">
            <div class="container">
                <div class="row">
                    <!-- Movie Poster -->
                    <div class="col-md-4 text-center">
                        <img src="~/images/movies/@Model.ImgUrl" class="movie-poster img-fluid rounded shadow-lg" alt="@Model.Name">
                    </div>

                    <!-- Movie Info -->
                    <div class="col-md-8">
                        <h1 class="movie-title">@Model.Name</h1>
                        <p class="movie-meta"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString() | <strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
                        <p class="movie-description"><strong>Price : </strong>@Model.Price.ToString("C")</p>
                        <p class="movie-description"><strong>Cinema : </strong>@Model.Cinema.Name</p>
                        <p class="movie-description"><strong>Description : </strong>@Model.Description</p>
                        <p class="movie-description"><strong>Category : </strong>@Model.Category.Name</p>
                        <div class="my-3">
                            <p class="card-text"><strong>Trailer:</strong></p>
                            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                            {
                                <video width="600" height="300" controls>
                                    <source src="@Model.TrailerUrl" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            }
                            else
                            {
                                <p class="text-muted">No trailer available.</p>
                            }
                        </div>
                        <div class="d-flex mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-light border border-dark me-3">← Back to Movies</a>
                            <a href="@Model.TrailerUrl" target="_blank" class="btn btn-danger border border-dark">🎬 Watch Trailer</a>
                        </div>
                    </div>
                </div>
                    <!--  Cast Section -->
                <div class="cast-section mt-5">
                    <h2 class="section-title">Meet the Cast</h2>
                    <div class="row d-flex justify-content-center flex-wrap">
                        @foreach (var actor in Model.ActorMovie)
                        {
                            <div class="col-md-3 col-sm-6 d-flex justify-content-center">
                                <div class="cast-card text-center">
                                    <!-- صورة الممثل -->
                                    <img src="@Url.Content("~/images/cast/" + actor.Actor.ProfilePicture)"
                                         class="cast-img img-fluid rounded-circle border border-dark shadow-lg"
                                         alt="@actor.Actor.FirstName @actor.Actor.LastName"
                                         width="100" height="100">

                                    <!-- اسم الممثل -->
                                    <h5 class="cast-name mt-2">@actor.Actor.FirstName @actor.Actor.LastName</h5>

                                    <!-- دور الممثل -->
                                    <p class="cast-role text-muted">as @actor.Actor.Bio</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                </div>
            </div>
        </div>

</body>
</html>